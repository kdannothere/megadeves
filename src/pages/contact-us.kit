<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Contáctanos | Megadeves</title>
    <link rel="icon" href="/img/logo.jpeg" sizes="32x32">
    <link rel="icon" href="/img/logo.jpeg" sizes="192x192">
    <link rel="stylesheet" href="./css/output.css" />
    <script type="module" src="./js/contact-message.js"></script>
  </head>
  <body>
    <div class="wrapper min-h-[100vh] flex flex-col">
      <!-- @import ../components/header.kit -->
      <div class="grid justify-center">
        <!-- @import ../components/contact-message.kit -->
        <div class="text-center">
          <h1 class="text-3xl mt-32 mb-8 font-bold">Contáctanos</h1>
        </div>
        <form id="contact-form" class="w-96 grid grid-cols-1 items-center">
          <div class="name flex flex-col mb-6">
            <label for="name">Nombre</label>
            <input
              class="border-2 border-gray-300 px-4 py-1 rounded-sm"
              tabindex="1"
              required
              type="text"
              id="name"
              name="name"
              placeholder="Introduce tu nombre"
            />
          </div>
          <div class="phone flex flex-col mb-6">
            <label for="phone">Teléfono</label>
            <input
              class="border-2 border-gray-300 px-4 py-1 rounded-sm"
              tabindex="2"
              required
              type="text"
              id="phone"
              name="phone"
              placeholder="Introduce tu número de teléfono"
            />
          </div>
          <div class="email flex flex-col mb-6">
            <label for="email">Email</label>
            <input
              class="border-2 border-gray-300 px-4 py-1 rounded-sm"
              tabindex="3"
              required
              type="email"
              id="email"
              name="email"
              placeholder="Introduce tu correo electrónico"
            />
          </div>
          <div class="message flex flex-col mb-6">
            <label for="message">Mensaje</label>
            <textarea
              class="min-h-28 border-2 border-gray-300 px-4 py-1 rounded-sm"
              tabindex="4"
              type="text"
              rows="5"
              required
              id="message"
              name="message"
              placeholder="Introduce tu mensaje"
            ></textarea>
          </div>
          <span
            id="contact-send-button"
            class="w-fit justify-self-center cursor-pointer bg-slate-300 px-8 py-2 rounded-sm"
            tabindex="5"
          >
          Enviar
          </span>
        </form>
      </div>
      <!-- @import ../components/footer.kit -->
    </div>
  </body>
</html>
